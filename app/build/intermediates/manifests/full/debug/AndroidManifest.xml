<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tmm.android.quizzGlid"
    android:versionCode="2"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <permission
        android:name="com.iit.testprovider.permission.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.iit.testprovider.permission.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:name="com.tmm.android.quizzGlid.TestProviderApplication"
        android:icon="@drawable/qzzz"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tmm.android.quizzGlid.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.tmm.android.quizzGlid.QuizActivity" />

        <provider
            android:name="com.tmm.android.quizzGlid.database.DBContentProvider"
            android:authorities="com.iit.testproviders.main.provider"
            android:exported="true"
            android:multiprocess="true"
            android:readPermission="com.iit.testprovider.permission.READ_DATABASE"
            android:writePermission="com.iit.testprovider.permission.WRITE_DATABASE" />

        <service
            android:name="com.tmm.android.quizzGlid.ServiceMusique"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>